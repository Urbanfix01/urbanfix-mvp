{
  "name": "urbanfix-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "npm run start:web",
    "dev:web": "npm --prefix apps/web run dev",
    "build:web": "npm --prefix apps/web run build",
    "start:web": "npm --prefix apps/web run start",
    "lint:web": "npm --prefix apps/web run lint",
    "deploy:web:precheck": "node scripts/vercel-predeploy-check.mjs",
    "deploy:web:prod": "npm run deploy:web:precheck && npx vercel deploy --prod --yes",
    "roadmap:sync": "node scripts/roadmap-auto-sync.mjs",
    "start:mobile": "npm --prefix apps/mobile run start",
    "android": "npm --prefix apps/mobile run android",
    "ios": "npm --prefix apps/mobile run ios",
    "web:expo": "npm --prefix apps/mobile run web",
    "start:desktop": "npm --prefix apps/desktop run dev",
    "dist:desktop": "npm --prefix apps/desktop run dist:win"
  }
}
